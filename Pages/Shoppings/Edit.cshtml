@page
@model Proiect_Medii_de_prodramare.Pages.Shoppings.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Shopping</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shopping.ID" />
            <div class="form-group">
                <label asp-for="Shopping.CustomerID" class="control-label"></label>
                <select asp-for="Shopping.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Shopping.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shopping.GameID" class="control-label"></label>
                <select asp-for="Shopping.GameID" class="form-control" asp-items="ViewBag.GameID"></select>
                <span asp-validation-for="Shopping.GameID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shopping.SellDate" class="control-label"></label>
                <input asp-for="Shopping.SellDate" class="form-control" />
                <span asp-validation-for="Shopping.SellDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
